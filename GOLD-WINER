  },
  
  // Expansi√≥n
  expansion: {
    enabled: true,
    interval: 'weekly',
    budget: 1000, // USD/mes
    newServices: {
      maxPerCycle: 3,
      minUptime: '99.9%'
    }
  },
  
  // Seguridad
  security: {
    enabled: true,
    interval: '5m',
    autoPatch: true,
    autoReport: true
  },
  
