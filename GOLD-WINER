üìä MONITOREO EN TIEMPO REAL

```javascript
// functions/src/monitoring.js
exports.monitoreoSistema = functions.pubsub.schedule('*/5 * * * *') // Cada 5 minutos
  .timeZone('UTC')
  .onRun(async (context) => {
    
    const metrics = {
      timestamp: new Date().toISOString(),
      sistema: {
        funcionesActivas: await getActiveFunctions(),
        memoriaUsada: process.memoryUsage().heapUsed / 1024 / 1024,
        uptime: process.uptime()
      },
      usuarios: {
        total: (await admin.firestore().collection('usuariosCosmicos').count().get()).data().count,
        activos24h: await getActiveUsers24h(),
        nuevosHoy: await getNewUsersToday()
      },
      seguridad: {
        amenazasBloqueadas: await getBlockedThreats(),
        escaneosRealizados: await getScansDone(),
        alertasActivas: await getActiveAlerts()
      },
      economia: {
        tokensMinteados: await getTotalTokensMinted(),
        nftsCreados: await getTotalNFTs(),
        volumenTransacciones: await getTransactionVolume()
      }
    };
    
    // Guardar m√©tricas
    await admin.firestore().collection('sistemaMetrics').add(metrics);
    
    // Verificar alertas
    await checkSystemAlerts(metrics);
    
    return null;
  });

async function checkSystemAlerts(metrics) {
  const alerts = [];
  
  // Ejemplo: Alerta si hay muchas amenazas
  if (metrics.seguridad.amenazasBloqueadas > 100) {
    alerts.push({
      tipo: 'ALTA_ACTIVIDAD_MALICIOSA',
      severidad: 'ALTA',
      mensaje: `Alta actividad detectada: ${metrics.seguridad.amenazasBloqueadas} amenazas bloqueadas`,
      timestamp: new Date().toISOString()
    });
  }
  
  // Ejemplo: Alerta si pocos usuarios activos
  if (metrics.usuarios.activos24h < 10) {
    alerts.push({
      tipo: 'BAJA_ACTIVIDAD_USUARIOS',
      severidad: 'MEDIA',
      mensaje: 'Baja actividad de usuarios en las √∫ltimas 24h',
      timestamp: new Date().toISOString()
    });
  }
  
  // Enviar alertas
  for (const alert of alerts) {
    await admin.firestore().collection('alertasSistema').add(alert);
    
    // Notificar por diferentes canales
    await sendAlertNotifications(alert);
  }
}

async function sendAlertNotifications(alert) {
  // Notificar a administradores
  const admins = await admin.firestore().collection('usuariosCosmicos')
    .where('rol', '==', 'ADMIN')
    .get();
  
  admins.forEach(async (doc) => {
    await admin.firestore().collection('notificaciones').add({
      userId: doc.id,
      tipo: 'ALERTA_SISTEMA',
      titulo: alert.tipo,
      mensaje: alert.mensaje,
      severidad: alert.severidad,
      timestamp: admin.firestore.FieldValue.serverTimestamp(),
      leida: false
    });
  });
  
  // Enviar email si es cr√≠tica
  if (alert.severidad === 'ALTA') {
    await sendEmailAlert(alert);
  }
}
```

