// üö® 6. FUNCI√ìN EXTRA: NOTIFICACIONES DE ALERTA
exports.notificarAlertaCosmica = functions.firestore
  .document('securityLogs/{logId}')
  .onCreate(async (snap, context) => {
    const log = snap.data();
    
    // Solo alertar sobre eventos importantes
    if (log.event.includes('ELIMINACI√ìN') || log.user === 'AN√ìNIMO_C√ìSMICO') {
      const alerta = {
        tipo: 'ALERTA_C√ìSMICA',
        severidad: 'MEDIA',
        mensaje: `Evento detectado: ${log.event} en ${log.coleccion}`,
        timestamp: admin.firestore.FieldValue.serverTimestamp(),
        documento: log.documentoId,
        user: log.user
      };

      // Guardar alerta
      await admin.firestore().collection('alertas').add(alerta);

      // Aqu√≠ podr√≠as agregar:
      // - Notificaciones push
      // - Env√≠o de emails
      // - Mensajes a Slack/Discord
      
      console.log(`üö® Alerta c√≥smica generada: ${log.event}`);
    }

    return null;
  });
```

