2. CONTRATO DAO EN SOLIDITY (Goerli Testnet)

```solidity
// contracts/DragonDAOV2.sol
// SPDX-License-Identifier: MIT
pragma solidity ^0.8.19;

import "@openzeppelin/contracts/token/ERC721/ERC721.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract DragonDAOV2 is ERC721, Ownable {
    
    struct Guardian {
        uint256 id;
        string name;
        uint256 power;
        uint256 experience;
        uint256 level;
        string[] abilities;
        bool isActive;
    }
    
    struct Proposal {
        uint256 id;
        address creator;
        string title;
        string description;
        uint256 votesFor;
        uint256 votesAgainst;
        uint256 deadline;
        bool executed;
        ProposalType proposalType;
    }
    
    enum ProposalType {
        TREASURY,
        GUARDIAN,
        UPGRADE,
        EMERGENCY
    }
    
    mapping(uint256 => Guardian) public guardians;
    mapping(uint256 => Proposal) public proposals;
    mapping(address => uint256) public guardianOf;
    mapping(uint256 => mapping(address => bool)) public hasVoted;
    
    uint256 public nextGuardianId;
    uint256 public nextProposalId;
    uint256 public totalPower;
    
    event GuardianMinted(address indexed owner, uint256 guardianId, string name);
    event ProposalCreated(uint256 indexed proposalId, ProposalType pType, string title);
    event Voted(address indexed voter, uint256 proposalId, bool support);
    event ProposalExecuted(uint256 indexed proposalId);
    event GuardianUpgraded(uint256 guardianId, uint256 newLevel);
    
    constructor() ERC721("DragonGuardian", "DRGN") Ownable(msg.sender) {}
    
    function mintGuardian(address to, string memory name) external payable {
        require(msg.value >= 0.01 ether, "Minting fee required");
        require(guardianOf[to] == 0, "Already has a guardian");
        
        uint256 guardianId = nextGuardianId++;
        guardians[guardianId] = Guardian({
            id: guardianId,
            name: name,
            power: 100,
            experience: 0,
            level: 1,
            abilities: new string[](2),
            isActive: true
        });
        
        guardians[guardianId].abilities[0] = "basic_protection";
        guardians[guardianId].abilities[1] = "cosmic_vision";
        
        _mint(to, guardianId);
        guardianOf[to] = guardianId;
        totalPower += 100;
        
        emit GuardianMinted(to, guardianId, name);
    }
    
    function createProposal(
        string memory title,
        string memory description,
        ProposalType pType
    ) external {
        require(guardianOf[msg.sender] > 0, "Must have guardian");
        require(bytes(title).length > 0, "Title required");
        
        uint256 proposalId = nextProposalId++;
        proposals[proposalId] = Proposal({
            id: proposalId,
            creator: msg.sender,
            title: title,
            description: description,
            votesFor: 0,
            votesAgainst: 0,
            deadline: block.timestamp + 7 days,
            executed: false,
            proposalType: pType
        });
        
        emit ProposalCreated(proposalId, pType, title);
    }
    
    function vote(uint256 proposalId, bool support) external {
        Proposal storage proposal = proposals[proposalId];
        require(guardianOf[msg.sender] > 0, "Must have guardian");
        require(block.timestamp <= proposal.deadline, "Voting ended");
        require(!hasVoted[proposalId][msg.sender], "Already voted");
        
        uint256 voterPower = guardians[guardianOf[msg.sender]].power;
        
        if (support) {
            proposal.votesFor += voterPower;
        } else {
            proposal.votesAgainst += voterPower;
        }
        
        hasVoted[proposalId][msg.sender] = true;
        emit Voted(msg.sender, proposalId, support);
    }
    
    function executeProposal(uint256 proposalId) external {
        Proposal storage proposal = proposals[proposalId];
        require(block.timestamp > proposal.deadline, "Voting still active");
        require(!proposal.executed, "Already executed");
        require(proposal.votesFor > proposal.votesAgainst, "Proposal not approved");
        
        // Ejecutar l√≥gica seg√∫n tipo de propuesta
        if (proposal.proposalType == ProposalType.TREASURY) {
            // Manejo de tesorer√≠a
        } else if (proposal.proposalType == ProposalType.GUARDIAN) {
            // Cambios en guardianes
        } else if (proposal.proposalType == ProposalType.UPGRADE) {
            // Actualizaciones del sistema
        }
        
        proposal.executed = true;
        emit ProposalExecuted(proposalId);
    }
    
    function upgradeGuardian(uint256 guardianId) external {
        Guardian storage guardian = guardians[guardianId];
        require(ownerOf(guardianId) == msg.sender, "Not owner");
        require(guardian.experience >= guardian.level * 1000, "Not enough XP");
        
        guardian.level++;
        guardian.power += 50;
        guardian.experience = 0;
        
        // Desbloquear nueva habilidad cada 5 niveles
        if (guardian.level % 5 == 0) {
            string memory newAbility = getAbilityForLevel(guardian.level);
            guardian.abilities.push(newAbility);
        }
        
        emit GuardianUpgraded(guardianId, guardian.level);
    }
    
    function getAbilityForLevel(uint256 level) internal pure returns (string memory) {
        if (level == 5) return "quantum_shield";
        if (level == 10) return "time_dilation";
        if (level == 15) return "multidimensional_portal";
        if (level == 20) return "reality_manipulation";
        return "basic_ability";
    }
}
```

3. API P√öBLICA V1 CON AUTENTICACI√ìN JWT

```typescript
// functions/src/api/v1.ts
import * as functions from "firebase-functions";
import * as admin from "firebase-admin";
import * as jwt from "jsonwebtoken";
import { Request, Response } from "express";

const JWT_SECRET = process.env.JWT_SECRET || "dragon_celestial_secret_2024";

interface APIKey {
  key: string;
  owner: string;
  permissions: string[];
  rateLimit: number;
  requests: number;
  createdAt: Date;
}

export const dragonAPIV1 = functions.https.onRequest(async (req: Request, res: Response) => {
  // CORS
  res.set("Access-Control-Allow-Origin", "*");
  res.set("Access-Control-Allow-Methods", "GET, POST, PUT, DELETE, OPTIONS");
  res.set("Access-Control-Allow-Headers", "Content-Type, Authorization, X-API-Key");

  if (req.method === "OPTIONS") {
    res.status(204).send("");
    return;
  }

  // Autenticaci√≥n
  const apiKey = req.headers["x-api-key"] as string;
  const authHeader = req.headers.authorization;
  let userToken: string | null = null;
  
  if (authHeader && authHeader.startsWith("Bearer ")) {
    userToken = authHeader.split("Bearer ")[1];
  }

  // Validar API Key
  const keyDoc = await admin.firestore().collection("apiKeys").doc(apiKey).get();
  if (!keyDoc.exists) {
    res.status(401).json({ error: "Invalid API Key" });
    return;
  }

  const keyData = keyDoc.data() as APIKey;
  
  // Rate limiting
  if (keyData.requests >= keyData.rateLimit) {
    res.status(429).json({ error: "Rate limit exceeded" });
    return;
  }

  // Actualizar contador de requests
  await keyDoc.ref.update({ requests: admin.firestore.FieldValue.increment(1) });

  // Verificar JWT si es necesario
  let userId: string | null = null;
  if (userToken) {
    try {
      const decoded = jwt.verify(userToken, JWT_SECRET) as { uid: string };
      userId = decoded.uid;
    } catch (error) {
      // Token inv√°lido, continuar como API key only
    }
  }

  // Routing
  const path = req.path;
  
  switch (true) {
    case path === "/v1/status":
      await handleStatus(req, res, userId);
      break;
    
    case path === "/v1/threats":
      await handleThreats(req, res, userId);
      break;
    
    case path.startsWith("/v1/nfts/"):
      const nftId = path.split("/")[3];
      await handleNFT(req, res, nftId, userId);
      break;
    
    case path === "/v1/scan":
      await handleScan(req, res, userId);
      break;
    
    case path === "/v1/webhook/btcpay":
      await handleBTCPayWebhook(req, res);
      break;
    
    default:
      res.status(404).json({ error: "Endpoint not found" });
  }
});

async function handleStatus(req: Request, res: Response, userId: string | null) {
  const systemStatus = {
    status: "operational",
    version: "1.0.0",
    timestamp: new Date().toISOString(),
    uptime: process.uptime(),
    metrics: {
      totalUsers: (await admin.firestore().collection("usuariosCosmicos").count().get()).data().count,
      totalNFTs: (await admin.firestore().collection("nftsGuardiania").count().get()).data().count,
      activeThreats: (await admin.firestore().collection("alertas").where("severidad", "==", "ALTA").count().get()).data().count,
      totalTransactions: (await admin.firestore().collection("transaccionesTokens").count().get()).data().count
    },
    user: userId ? await getUserData(userId) : null
  };
  
  res.json(systemStatus);
}

async function handleThreats(req: Request, res: Response, userId: string | null) {
  const limit = parseInt(req.query.limit as string) || 50;
  const severity = req.query.severity as string;
  
  let query = admin.firestore().collection("securityLogs").orderBy("timestamp", "desc").limit(limit);
  
  if (severity) {
    query = query.where("severidad", "==", severity.toUpperCase());
  }
  
  const snapshot = await query.get();
  const threats = snapshot.docs.map(doc => ({
    id: doc.id,
    ...doc.data()
  }));
  
  res.json({
    count: threats.length,
    threats: threats,
    analyzed: new Date().toISOString()
  });
}

async function handleNFT(req: Request, res: Response, nftId: string, userId: string | null) {
  const nftDoc = await admin.firestore().collection("nftsGuardiania").doc(nftId).get();
  
  if (!nftDoc.exists) {
    res.status(404).json({ error: "NFT not found" });
    return;
  }
  
  const nftData = nftDoc.data();
  
  // Verificar permisos si es usuario espec√≠fico
  if (userId && nftData.dueno !== userId) {
    const userDoc = await admin.firestore().collection("usuariosCosmicos").doc(userId).get();
    const userData = userDoc.data();
    
    if (!userData.permissions?.includes("view_all_nfts")) {
      res.status(403).json({ error: "Not authorized" });
      return;
    }
  }
  
  res.json(nftData);
}

async function handleScan(req: Request, res: Response, userId: string | null) {
  const { url, depth = 1 } = req.body;
  
  if (!url) {
    res.status(400).json({ error: "URL required" });
    return;
  }
  
  // Simulaci√≥n de escaneo de seguridad
  const scanResult = {
    id: `scan_${Date.now()}`,
    url: url,
    depth: depth,
    status: "scanning",
    threatsFound: Math.floor(Math.random() * 5),
    vulnerabilities: [
      {
        type: "XSS",
        severity: "MEDIUM",
        description: "Potential cross-site scripting vulnerability"
      },
      {
        type: "CSRF",
        severity: "LOW",
        description: "Missing CSRF token"
      }
    ],
    recommendations: [
      "Implement Content Security Policy",
      "Add X-Frame-Options header"
    ],
    timestamp: new Date().toISOString()
  };
  
  // Guardar resultado
  await admin.firestore().collection("securityScans").doc(scanResult.id).set(scanResult);
  
  res.json(scanResult);
}

async function handleBTCPayWebhook(req: Request, res: Response) {
  // L√≥gica de webhook BTCPay
  const event = req.body;
  
  await admin.firestore().collection("btcpayWebhooks").add({
    event: event,
    timestamp: admin.firestore.FieldValue.serverTimestamp(),
    processed: false
  });
  
  res.json({ received: true });
}

async function getUserData(userId: string) {
  const userDoc = await admin.firestore().collection("usuariosCosmicos").doc(userId).get();
  return userDoc.exists ? userDoc.data() : null;
}
```

üéÆ 4. SISTEMA DE CLANES Y BATALLAS

```javascript
// functions/src/clanes.js
exports.crearClanCosmico = functions.https.onCall(async (data, context) => {
  if (!context.auth) throw new functions.https.HttpsError('unauthenticated', 'Autenticaci√≥n requerida');
  
  const { nombre, descripcion, insignia } = data;
  const userId = context.auth.uid;
  
  // Verificar que el usuario no tenga clan
  const userDoc = await admin.firestore().collection('usuariosCosmicos').doc(userId).get();
  if (userDoc.data().clan) {
    throw new functions.https.HttpsError('already-exists', 'Ya perteneces a un clan');
  }
  
  const clanId = `CLAN_${Date.now()}_${Math.random().toString(36).substr(2, 9)}`;
  
  const clanData = {
    id: clanId,
    nombre,
    descripcion,
    insignia: insignia || `https://api.dicebear.com/7.x/shapes/svg?seed=${clanId}`,
    fundador: userId,
    miembros: [userId],
    fechaFundacion: admin.firestore.FieldValue.serverTimestamp(),
    nivel: 1,
    experiencia: 0,
    tesoreria: 0,
    rankings: {
      poderTotal: 0,
      victorias: 0,
      derrotas: 0
    },
    reglas: [],
    chatId: `CHAT_${clanId}`
  };
  
  // Crear clan
  await admin.firestore().collection('clanesCosmicos').doc(clanId).set(clanData);
  
  // Actualizar usuario
  await admin.firestore().collection('usuariosCosmicos').doc(userId).update({
    clan: clanId,
    rolClan: 'LIDER'
  });
  
  // Crear chat del clan
  await admin.firestore().collection('chatsClanes').doc(clanData.chatId).set({
    clanId: clanId,
    mensajes: [],
    ultimaActividad: admin.firestore.FieldValue.serverTimestamp()
  });
  
  return {
    success: true,
    clanId: clanId,
    mensaje: `¬°Clan ${nombre} fundado exitosamente!`
  };
});

exports.unirseClan = functions.https.onCall(async (data, context) => {
  if (!context.auth) throw new functions.https.HttpsError('unauthenticated', 'Autenticaci√≥n requerida');
  
  const { clanId } = data;
  const userId = context.auth.uid;
  
  // Verificar que el clan existe y tiene espacio
  const clanDoc = await admin.firestore().collection('clanesCosmicos').doc(clanId).get();
  if (!clanDoc.exists) {
    throw new functions.https.HttpsError('not-found', 'Clan no encontrado');
  }
  
  const clanData = clanDoc.data();
  if (clanData.miembros.length >= 50) { // L√≠mite de 50 miembros
    throw new functions.https.HttpsError('resource-exhausted', 'Clan lleno');
  }
  
  // Verificar que el usuario no tenga clan
  const userDoc = await admin.firestore().collection('usuariosCosmicos').doc(userId).get();
  if (userDoc.data().clan) {
    throw new functions.https.HttpsError('already-exists', 'Ya perteneces a un clan');
  }
  
  // Actualizar clan
  await clanDoc.ref.update({
    miembros: admin.firestore.FieldValue.arrayUnion(userId),
    [`estadisticas.${userId}`]: {
      fechaIngreso: admin.firestore.FieldValue.serverTimestamp(),
      contribucion: 0,
      victorias: 0
    }
  });
  
  // Actualizar usuario
  await userDoc.ref.update({
    clan: clanId,
    rolClan: 'MIEMBRO'
  });
  
  // Notificaci√≥n al clan
  await admin.firestore().collection('notificacionesClan').add({
    clanId: clanId,
    tipo: 'NUEVO_MIEMBRO',
    mensaje: `${userDoc.data().email} se ha unido al clan`,
    timestamp: admin.firestore.FieldValue.serverTimestamp()
  });
  
  return {
    success: true,
    mensaje: `¬°Te has unido al clan ${clanData.nombre}!`
  };
});

exports.iniciarBatallaClan = functions.https.onCall(async (data, context) => {
  if (!context.auth) throw new functions.https.HttpsError('unauthenticated', 'Autenticaci√≥n requerida');
  
  const { clanRivalId, apuesta } = data;
  const userId = context.auth.uid;
  
  // Verificar que el usuario sea l√≠der de su clan
  const userDoc = await admin.firestore().collection('usuariosCosmicos').doc(userId).get();
  const userClanId = userDoc.data().clan;
  
  if (!userClanId) {
    throw new functions.https.HttpsError('failed-precondition', 'No perteneces a un clan');
  }
  
  if (userDoc.data().rolClan !== 'LIDER') {
    throw new functions.https.HttpsError('permission-denied', 'Solo el l√≠der puede iniciar batallas');
  }
  
  // Verificar clan rival
  const clanRivalDoc = await admin.firestore().collection('clanesCosmicos').doc(clanRivalId).get();
  if (!clanRivalDoc.exists) {
    throw new functions.https.HttpsError('not-found', 'Clan rival no encontrado');
  }
  
  // Crear batalla
  const batallaId = `BATALLA_${Date.now()}_${userClanId}_${clanRivalId}`;
  
  const batallaData = {
    id: batallaId,
    clanAtacante: userClanId,
    clanDefensor: clanRivalId,
    apuesta: apuesta || 0,
    estado: 'DESAFIO_ENVIADO',
    fechaCreacion: admin.firestore.FieldValue.serverTimestamp(),
    fechaInicio: null,
    fechaFin: null,
    ganador: null,
    participantes: {
      [userClanId]: [],
      [clanRivalId]: []
    },
    resultado: null,
    estadisticas: {
      rondas: 0,
      duracion: 0,
      poderTotal: 0
    }
  };
  
  await admin.firestore().collection('batallasClanes').doc(batallaId).set(batallaData);
  
  // Notificar al clan rival
  await admin.firestore().collection('notificacionesClan').add({
    clanId: clanRivalId,
    tipo: 'DESAFIO_BATALLA',
    mensaje: `El clan ${userDoc.data().clanNombre || 'Desconocido'} te ha desafiado a una batalla`,
    datos: { batallaId, apuesta },
    timestamp: admin.firestore.FieldValue.serverTimestamp()
  });
  
  return {
    success: true,
    batallaId: batallaId,
    mensaje: 'Desaf√≠o de batalla enviado'
  };
});
```

üì± 5. APP M√ìVIL - PANTALLA PRINCIPAL (React Native)

```typescript
// App.tsx - Pantalla principal con navegaci√≥n
import React from 'react';
import { NavigationContainer } from '@react-navigation/native';
import { createBottomTabNavigator } from '@react-navigation/bottom-tabs';
import { createStackNavigator } from '@react-navigation/stack';
import { SafeAreaProvider } from 'react-native-safe-area-context';
import Icon from 'react-native-vector-icons/Ionicons';

// Pantallas
import HomeScreen from './src/screens/HomeScreen';
import ClanScreen from './src/screens/ClanScreen';
import DAOScreen from './src/screens/DAOScreen';
import NFTGalleryScreen from './src/screens/NFTGalleryScreen';
import ProfileScreen from './src/screens/ProfileScreen';
import BattleScreen from './src/screens/BattleScreen';
import ScanScreen from './src/screens/ScanScreen';

const Tab = createBottomTabNavigator();
const Stack = createStackNavigator();

function HomeStack() {
  return (
    <Stack.Navigator>
      <Stack.Screen name="HomeMain" component={HomeScreen} options={{ title: 'Drag√≥n Celestial' }} />
      <Stack.Screen name="Battle" component={BattleScreen} />
      <Stack.Screen name="Scan" component={ScanScreen} />
    </Stack.Navigator>
  );
}

function ClanStack() {
  return (
    <Stack.Navigator>
      <Stack.Screen name="ClanMain" component={ClanScreen} options={{ title: 'Clanes C√≥smicos' }} />
    </Stack.Navigator>
  );
}

export default function App() {
  return (
    <SafeAreaProvider>
      <NavigationContainer>
        <Tab.Navigator
          screenOptions={({ route }) => ({
            tabBarIcon: ({ focused, color, size }) => {
              let iconName;
              
              switch (route.name) {
                case 'Home':
                  iconName = focused ? 'home' : 'home-outline';
                  break;
                case 'Clanes':
                  iconName = focused ? 'people' : 'people-outline';
                  break;
                case 'DAO':
                  iconName = focused ? 'shield' : 'shield-outline';
                  break;
                case 'NFTs':
                  iconName = focused ? 'diamond' : 'diamond-outline';
                  break;
                case 'Perfil':
                  iconName = focused ? 'person' : 'person-outline';
                  break;
              }
              
              return <Icon name={iconName} size={size} color={color} />;
            },
            tabBarActiveTintColor: '#4A00E0',
            tabBarInactiveTintColor: 'gray',
            tabBarStyle: {
              backgroundColor: '#0f0c29',
              borderTopColor: '#4A00E0',
            },
            headerStyle: {
              backgroundColor: '#0f0c29',
            },
            headerTintColor: '#fff',
          })}
        >
          <Tab.Screen name="Home" component={HomeStack} options={{ headerShown: false }} />
          <Tab.Screen name="Clanes" component={ClanStack} options={{ headerShown: false }} />
          <Tab.Screen name="DAO" component={DAOScreen} />
          <Tab.Screen name="NFTs" component={NFTGalleryScreen} />
          <Tab.Screen name="Perfil" component={ProfileScreen} />
        </Tab.Navigator>
      </NavigationContainer>
    </SafeAreaProvider>
  );
}
```

