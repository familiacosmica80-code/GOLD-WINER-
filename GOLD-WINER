    <!-- Scripts Firebase y App -->
    <script src="https://www.gstatic.com/firebasejs/9.6.0/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.0/firebase-auth-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.0/firebase-firestore-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.0/firebase-functions-compat.js"></script>
    
    <script>
        // Configuraci√≥n Firebase (reemplaza con tu configuraci√≥n)
        const firebaseConfig = {
            apiKey: "TU_API_KEY",
            authDomain: "TU_PROYECTO.firebaseapp.com",
            projectId: "TU_PROYECTO",
            storageBucket: "TU_PROYECTO.appspot.com",
            messagingSenderId: "TU_SENDER_ID",
            appId: "TU_APP_ID"
        };

        // Inicializar Firebase
        firebase.initializeApp(firebaseConfig);
        const auth = firebase.auth();
        const db = firebase.firestore();
        const functions = firebase.functions();

        // Sistema de NFTs
        async function mintearNFT(tipo) {
            try {
                const mintearNFTGuardian = functions.httpsCallable('mintearNFTGuardian');
                const resultado = await mintearNFTGuardian({ tipo: tipo });
                alert(resultado.data.mensaje);
                cargarNFTsUsuario();
            } catch (error) {
                console.error('Error minteando NFT:', error);
                alert('Error: ' + error.message);
            }
        }

        // Sistema de Tokens
        async function mintearTokens(cantidad) {
            try {
                const mintearTokensEnergia = functions.httpsCallable('mintearTokensEnergia');
                const resultado = await mintearTokensEnergia({ cantidad: cantidad });
                alert(resultado.data.mensaje);
                actualizarDatosUsuario();
            } catch (error) {
                console.error('Error minteando tokens:', error);
                alert('Error: ' + error.message);
            }
        }

        // Sistema de Contrato
        async function stakeTokens() {
            const cantidad = document.getElementById('stakeAmount').value;
            if (!cantidad || cantidad <= 0) {
                alert('Ingresa una cantidad v√°lida');
                return;
            }

            try {
                const interactuarContrato = functions.httpsCallable('interactuarContrato');
                const resultado = await interactuarContrato({
                    accion: 'STAKE',
                    parametros: { cantidad: parseInt(cantidad) }
                });
                alert('Stake enviado: ' + resultado.data.hash);
            } catch (error) {
                console.error('Error stakenado:', error);
                alert('Error: ' + error.message);
            }
        }

        // Cargar datos del usuario
        async function cargarDatosUsuario() {
            auth.onAuthStateChanged(async (user) => {
                if (user) {
                    document.getElementById('userStatus').innerHTML = 
                        `Guerrero: ${user.email} | UID: ${user.uid}`;
                    
                    // Escuchar cambios en tiempo real
                    db.collection('usuariosCosmicos').doc(user.uid)
                        .onSnapshot((doc) => {
                            if (doc.exists) {
                                const data = doc.data();
                                actualizarUI(data);
                            }
                        });
                    
                    // Cargar NFTs
                    cargarNFTsUsuario();
                    
                    // Escuchar transacciones
                    escucharTransacciones();
                    
                    // Escuchar defensas
                    escucharDefensas();
                } else {
                    // No autenticado
                    document.getElementById('userStatus').innerHTML = 
                        'No autenticado. Inicia sesi√≥n para activar tus poderes.';
                }
            });
        }

        function actualizarUI(data) {
            // Actualizar energ√≠a
            const energia = data.energia || 0;
            document.getElementById('currentEnergy').textContent = energia;
            document.getElementById('energyBar').style.width = `${Math.min(energia, 100)}%`;
            
            // Actualizar nivel
            document.getElementById('userLevel').textContent = data.nivel || 1;
            
            // Actualizar tokens
            const tokens = data.tokensZEK || 0;
            document.getElementById('tokenBalance').textContent = tokens;
            document.getElementById('zekBalance').textContent = `${tokens} ZEK`;
            
            // Actualizar poderes activos
            actualizarPoderesActivos(data.poderesActivos || []);
        }

        function actualizarPoderesActivos(poderes) {
            const container = document.getElementById('activePowers');
            container.innerHTML = '';
            
            poderes.forEach(poder => {
                const div = document.createElement('div');
                div.innerHTML = `
                    <strong>${poder.poder}</strong>: ${poder.efecto}
                    <br><small>Expira: ${new Date(poder.expira?.toDate()).toLocaleTimeString()}</small>
                `;
                container.appendChild(div);
            });
        }

        // Inicializar
        document.addEventListener('DOMContentLoaded', () => {
            cargarDatosUsuario();
            // Iniciar pulsos energ√©ticos
            setInterval(() => {
                const bar = document.getElementById('energyBar');
                const width = parseInt(bar.style.width);
                bar.style.width = `${Math.max(30, (width + 5) % 105)}%`;
            }, 2000);
        });
    </script>
</body>
</html>
```

